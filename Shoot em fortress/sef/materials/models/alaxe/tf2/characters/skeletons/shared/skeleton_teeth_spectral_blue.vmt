	"$basemapalphaphongmask" "1"
	"$rimlight" "1"
	"$rimlightexponent" "0"
	"$rimlightboost" ".1"

	"$cloakPassEnabled" "1"

	"Proxies"
	{
		"weapon_invis"
		{
		}

		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}


		"YellowLevel"
		{
			"resultVar" "$yellow"
		}

		"Equals"
		{
			"srcVar1" "$yellow"
			"resultVar" "$color2"
		}

// ------------------------- where the magic happens

		"Sine"
		{
			"sineperiod" "2"
			"sinemin" ".00125"
			"sinemax" ".1"
			"resultVar" "$selfillumfresnelminmaxexp[1]"
		}
		
