"VertexlitGeneric"
{
	"$nodecal" "1"
	"$baseTexture" "models\alaxe\tf2\characters\skeletons\shared/skeleton_teeth_spectral_blue"

	"$detail" "effects/emp_arc1"
	"$detailscale" "8"
	"$detailblendfactor" 1
	"$detailblendmode" 1
	
	"$yellow" "0"
	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"

	">=DX90"
	{
		"$selfillum" "1"
	}
	
	"$selfillumtint" "[18 145 230]"
	"$selfIllumFresnel" "1"
